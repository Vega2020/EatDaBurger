{{!-- Setup the `index.handlebars` to have the template that Handlebars can render onto. --}}

<h1>Burgers!</h1>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have not been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> eaten!<br>
    <input type="radio" name="eaten" value="0"> not eaten
  </div>

  <button type="submit">Add Burger</button>
</form>

